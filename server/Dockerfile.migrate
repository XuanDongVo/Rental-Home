# Dockerfile.migrate

FROM node:20-alpine

WORKDIR /app

# Install Prisma dependencies
COPY package.json package-lock.json ./
RUN npm install

# Copy source needed for migrate + seed
COPY prisma ./prisma
COPY tsconfig.json ./
COPY prisma/seed.ts ./prisma/seed.ts
COPY src ./src

# Prisma generate
RUN npx prisma generate

# Environment for production (optional)
ENV NODE_ENV=production

# Entry point: run migrate & seed
CMD ["sh", "-c", "npx prisma migrate deploy && npm run seed"]
